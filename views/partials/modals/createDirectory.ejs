<div class="modal fade" id="createDirectory" tabindex="-1" aria-labelledby="createDirectory" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" action="/api/directory/create">
                <input type="hidden" name="dir" value="<%= dir %>">
                <div class="modal-header">
                    <h5 class="modal-title" id="createDirectory">Create new directory in <%= title %></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group my-2">
                        <input type="text" class="form-control" name="dir_name" placeholder="Directory name">
                    </div>
                    <div class="form-group my-2">
                        <label>
                            Create nested directories
                            <input type="checkbox" name="recursive">
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>