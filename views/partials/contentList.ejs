<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">
                <input type="checkbox" id="checkAll">
            </th>
            <th scope="col"> </th>
            <th scope="col">Name</th>
            <th scope="col">Size</th>
        </tr>
    </thead>
    <tbody>
        <% contents.map(c => { %> 
            <% if (!c.fm.isPresentable()) return %> 
            <tr data-name="<%= c.content %>" >
                <th scope="row">
                    <input type="checkbox" name="<%= c.content %>" class="rowCheckbox" data-dir="<%= dir + '/' + c.content %>"> 
                </th>
                <th>
                    <% if (c.fm.isFile()) { %>
                        <div class="contentIconSm position-relative">
                            <i class="bi bi-file-earmark"></i>
                            <span class="position-absolute">
                                <%= c.fm.getFileExtension() %>
                            </span>
                        </div>
                    <% } else if (c.fm.isDirectory()) { %> 
                        <div class="contentIconSm position-relative">
                            <i class="bi bi-folder"></i>
                        </div>
                    <% } %> 
                </th>
                <td>
                    <a href="<%= helpers.createLink(dir + '/' + c.content, c.fm.isFile()) %>">
                        <%= c.content %>
                    </a>
                </td>
                <td>
                    <%= helpers.getSize(c.fm.getFileSize()) %> 
                </td>
            </tr>
        <% }) %> 
    </tbody>
</table>