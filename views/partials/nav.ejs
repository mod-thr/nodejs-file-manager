<nav class="d-flex flex-row">
    <ul class="list-inline d-flex border border-primary rounded-bottom mx-2 h-2">
        <li class="list-inline-item flex-center m-1" title="Reload">
            <button class="btn btn-link" onclick="location.reload()">
                <i class="bi bi-arrow-clockwise"></i>
            </button>
        </li>
        <li class="list-inline-item flex-center m-1" title="Home">
            <a href="/" class="btn btn-link">
                <i class="bi bi-house"></i>
            </a>
        </li>
        <li class="list-inline-item flex-center m-1" title="Open Directory">
            <div class="dropdown">
                <button class="btn btn-link dropdown-toggle no-arrow" id="openDir" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-slash-lg"></i>
                </button>
                <div class="dropdown-menu p-2 dirSearch" aria-labelledby="openDir">
                    <form method="GET" class="d-flex flex-row flex-center">
                        <input type="text" name="dir" class="form-control form-control-sm" placeholder="Enter directory or file path">
                        <button type="submit" class="btn btn-sm btn-primary">
                            GO
                        </button>
                    </form>
                </div>
            </div>
        </li>
    </ul>

    <ul class="list-inline d-flex border border-primary rounded-bottom mx-2 h-2">
        <% if(viewMode === 'icon'){ %>
            <li class="list-inline-item flex-center m-1" title="View Lists">
                <label class="btn btn-link">
                    <i class="bi bi-view-list"></i>
                    <input type="checkbox" class="d-none" onchange="changeViewMode('list')">
                </label>
            </li>
        <% } else if(viewMode === 'list') { %>
            <li class="list-inline-item flex-center m-1" title="View Icons">
                <label class="btn btn-link">
                    <i class="bi bi-grid-3x3-gap"></i>
                    <input type="checkbox" class="d-none" onchange="changeViewMode('icon')">
                </label>
            </li>
        <% } %> 
    </ul>

    <ul class="list-inline d-flex border border-primary rounded-bottom mx-2 h-2">
        <% if(theme === 'light'){ %>
            <li class="list-inline-item flex-center m-1" title="Dark mode">
                <label class="btn btn-link">
                    <i class="bi bi-moon"></i>
                    <input type="checkbox" class="d-none" onchange="changeTheme('dark')">
                </label>
            </li>
            <% } else if(theme === 'dark') { %>
            <li class="list-inline-item flex-center m-1" title="Light mode">
                <label class="btn btn-link">
                    <i class="bi bi-brightness-high"></i>
                    <input type="checkbox" class="d-none" onchange="changeTheme('light')">
                </label>
            </li>
        <% } %> 
        <li class="list-inline-item flex-center m-1" title="Settings">
            <button class="btn btn-link" data-bs-toggle="modal" data-bs-target="#settingsModal">
                <i class="bi bi-gear"></i>
            </button>
        </li>
    </ul>

    <ul class="list-inline d-flex border border-primary rounded-bottom mx-2 h-2">
        <li class="list-inline-item flex-center m-1" title="">
            <button class="btn btn-link">
                <i class="bi bi-hurricane"></i>
            </button>
        </li>
    </ul>
</nav>